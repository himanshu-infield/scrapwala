<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_12dp"
    android:background="@drawable/rect_radius12_f4f8fb"
    android:orientation="vertical"
    android:padding="@dimen/_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white_6dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_12dp"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/tvMonth"
                style="@style/medium_14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:text="Jan"
                android:textColor="@color/_1f1f1f" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/medium_26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textCapCharacters"
                android:text="15"
                android:textColor="@color/_1f1f1f" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12dp"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_toLeftOf="@+id/llEdit"
            android:layout_toRightOf="@+id/llDate"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvaddressType"
                style="@style/normal_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textColor="@color/_1f1f1f" />

            <TextView
                android:id="@+id/tvAddressLine1"
                style="@style/normal_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8dp"
                android:text="Sector 44, Gurugram, Haryana"
                android:textColor="@color/_1f1f1f" />

            <TextView
                android:id="@+id/tvAddressPin"
                style="@style/normal_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:text="Pincode - 122003"
                android:textColor="@color/_1f1f1f" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/success"
                style="@style/heading_11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#57bc2f"
                android:visibility="gone"
                android:inputType="textCapCharacters"
                android:text="SUCCESS"/>

            <RelativeLayout
                android:id="@+id/rlEdit"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:visibility="visible"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circle_white_30">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_edit" />

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>