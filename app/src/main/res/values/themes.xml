    <style name="MyFilledEditBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    <item name="colorPrimary">@color/secondary_dark</item>
    <item name="colorOnSurface">@color/secondary_dark</item>
    <item name="android:background">@drawable/selectordrawable</item>
    <item name="android:textColor">@color/name_heading</item>
    <item name="hintTextColor">@color/name_heading</item>
    <item name="colorControlActivated">@color/red</item>
    <item name="colorAccent">@color/name_heading</item>
    </style>
    <style name="filledEditBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/secondary_dark</item>
        <item name="colorOnSurface">@color/secondary_dark</item>
        <item name="android:background">@drawable/selectordrawable</item>
        <item name="android:textColor">@color/name_heading</item>
        <item name="hintTextColor">@color/_414141</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorAccent">@color/name_heading</item>
    </style>


    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="MyFilledBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="colorPrimary">@color/secondary_dark</item>
        <item name="colorOnSurface">@color/secondary_dark</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/secondary_dark</item>
        <item name="android:textColorHint">@color/secondary_dark</item>

        <item name="errorTextColor">@color/red</item>



    </style>

    <style name="SearchViewMy" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>
