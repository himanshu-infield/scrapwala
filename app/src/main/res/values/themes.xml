<resources>
    <style name="Theme.ScrapWala" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/name_heading</item>
        <item name="colorPrimaryVariant">@color/name_heading</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/name_heading</item>
        <item name="colorSecondaryVariant">@color/name_heading</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>


        <item name="colorAccent">@color/name_heading</item>


        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>


        <item name="searchViewStyle">@style/SearchViewMy</item>

        <item name="textInputStyle">@style/MyFilledBox</item>


        <item name="editTextStyle">@style/MyFilledEditBox</item>

        <!--remove that white startup screen-->
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
</style>

