<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ScrapWala" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" />

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Custom_Slider_Style" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/slider_overlay</item>
    </style>

    <style name="slider_overlay">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/_75cb52</item>
    </style>
    <style name="tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="shapeAppearanceOverlay">@style/tooltipShOverylay</item>
        <item name="backgroundTint">@color/_75cb52</item>
    </style>

    <style name="tooltipShOverylay">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
        <!--<item name="android:fontFamily">@font/cera_pro_medium</item>-->
    </style>
</resources>