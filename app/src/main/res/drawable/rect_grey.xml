<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#d1d0d0"/>

            <corners android:radius="14dp"/> <!-- First color -->
        </shape>
    </item>

    <!-- Top Rectangle with Margin Bottom -->
    <item
        android:bottom="6dp"> <!-- Margin bottom between the two rectangles -->
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="14dp"/> <!-- Second color -->
        </shape>
    </item>

</layer-list>