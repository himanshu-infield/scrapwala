<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="15dp"

        android:background="@drawable/rect_black_second"
        android:layout_height="wrap_content"
        tools:ignore="MissingDefaultResource">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                style="@style/semibold_12sp"
                android:textColor="@color/app_green"
                android:text="Home"

                android:id="@+id/txtAddressTag"
                android:layout_height="wrap_content"></TextView>


            <ImageView
                android:layout_width="30dp"
                android:layout_alignParentRight="true"
                android:padding="2dp"
                android:id="@+id/imgDelete"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_height="30dp"></ImageView>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            style="@style/normal_12sp"
            android:text="F-20 Sectore 3"
            android:id="@+id/txtFullAddress"
            android:layout_marginTop="6dp"
            android:textColor="@color/_333333"
            android:layout_height="wrap_content"></TextView>


        <TextView
            android:layout_width="wrap_content"
            style="@style/normal_12sp"
            android:layout_marginTop="4dp"
            android:text="Pincode:121004"
            android:id="@+id/txtPincode"
            android:textColor="@color/_333333"
            android:layout_height="wrap_content"></TextView>

    </LinearLayout>

</LinearLayout>
</layout>