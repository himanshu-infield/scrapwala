<?xml version="1.0" encoding="utf-8"?>


<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewFlipper"
    android:measureAllChildren="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="25dp"
        android:layout_height="wrap_content">




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            style="@style/heading_28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:text="GET OTP"
            android:textColor="@color/_333333"></TextView>


        <TextView
            style="@style/normal_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"


            android:text="Enter your mobile number to start
selling recyclables"
            android:textColor="@color/_333333"></TextView>


        <TextView
            style="@style/normal_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Mobile no"
            android:textColor="@color/_333333"></TextView>












<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:hintEnabled="false"
            android:layout_marginTop="10dp"
            app:errorIconDrawable="@null">


            <com.scrapwala.utils.widgets.TextInputCustomClass
                android:id="@+id/edtPhone"
                style="@style/MyFilledEditBox"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:hintEnabled="false"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/graphik_regular"
                android:textColor="@color/_333333"
                android:inputType="number"

                android:maxLength="15"

                android:paddingStart="95dp"

                android:textSize="14sp"


                />


        </com.google.android.material.textfield.TextInputLayout>


<LinearLayout
    android:layout_width="wrap_content"

    android:orientation="horizontal"
    android:layout_marginTop="13dp"
    android:gravity="center_vertical"
    android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"



        style="@style/normal_14sp"
        android:textColor="@color/_333333"

        android:text="+91 India"></TextView>


    <TextView
        android:layout_width="1dp"
        android:layout_marginHorizontal="8dp"

        android:background="#eaeaea"
        android:id="@+id/txtSeparator"
        android:layout_height="match_parent"></TextView>


</LinearLayout>



</RelativeLayout>


        <TextView
            style="@style/normal_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="You will receive an OTP for verification"
            android:textColor="@color/_666666"></TextView>






    </LinearLayout>




        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="125dp"
            android:background="@drawable/rect_green_app"
            android:layout_width="match_parent"
            android:text="Get OTP"
            android:textColor="@color/white"
            android:id="@+id/txtGetOtp"
            android:layout_marginHorizontal="15dp"

            android:layout_height="50dp"/>



    </RelativeLayout>














    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="25dp"
        android:layout_height="wrap_content">




        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                style="@style/heading_28sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="VERIFICATION CODE"
                android:textColor="@color/_333333"></TextView>


            <TextView
                style="@style/normal_18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtVerify"
                android:layout_marginTop="27dp"
                android:text=""
                android:textColor="@color/_333333"></TextView>


            <TextView
                style="@style/normal_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Enter the OTP you received"
                android:textColor="@color/_333333"></TextView>




            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputOtpView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:boxBackgroundColor="@android:color/transparent"
                app:boxBackgroundMode="filled"

                app:errorEnabled="false"
                app:errorIconDrawable="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtOtpSent">

            <com.mukeshsolanki.OtpView
                android:id="@+id/otp_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:cursorVisible="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="number"
                android:padding="0dp"
                android:layout_marginTop="10dp"
                android:state_selected="false"
                android:textAllCaps="true"
                android:textColor="@color/_333333"
                app:OtpHideLineWhenFilled="false"
                app:OtpItemCount="4"
                app:OtpItemHeight="48dp"
                app:OtpItemSpacing="6dp"
                app:OtpItemWidth="37dp"
                app:OtpLineColor="@color/_eaeaea"
                app:OtpLineWidth="1dp"
                app:OtpViewType="rectangle"
                />

            </com.google.android.material.textfield.TextInputLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="17dp"
                android:layout_height="wrap_content">



            <TextView
                style="@style/normal_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Did not receive the OTP ? "
                android:textColor="@color/_666666"></TextView>







                <TextView
                    android:id="@+id/resendOtp"
                    style="@style/medium_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"

                    android:layout_marginEnd="4dp"
                    android:paddingBottom="10dp"
                    android:text="Resend Otp"
                    android:enabled="true"
                    android:textColor="@color/name_heading"

                    ></TextView>


                <TextView
                    android:layout_width="wrap_content"
                    style="@style/semibold_12sp"
                    android:id="@+id/timer"
                    android:visibility="gone"
                    android:textColor="@color/_666666"
                    android:layout_height="wrap_content"></TextView>

            </LinearLayout>


        </LinearLayout>




        <Button
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="125dp"
            android:background="@drawable/rect_green_app"
            android:layout_width="match_parent"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:id="@+id/txtContinueButton"
            android:layout_marginHorizontal="15dp"

            android:layout_height="50dp"/>



    </RelativeLayout>


















</ViewFlipper>